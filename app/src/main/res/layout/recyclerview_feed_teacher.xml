<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="3dp"
    android:paddingBottom="0.3dp"
    android:background="#668c18"



    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"

    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

                android:background="@drawable/atirek_dusra_chutiyapa"
            android:id="@+id/linear_layout_43"
            android:orientation="vertical">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:padding="2dp"
                android:background="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_marginTop="3dp"
                android:id="@+id/imageView_43"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TITLE"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:id="@+id/title_43"
                android:textColor="@color/blue_dark"
                android:textSize="25dp"

                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_dark"
                android:text="Message"
                android:textSize="20dp"
                android:layout_marginTop="3dp"
                android:textStyle="italic"
                android:id="@+id/message_43"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="3dp"/>

        </LinearLayout>


</android.support.v7.widget.CardView>
</RelativeLayout>