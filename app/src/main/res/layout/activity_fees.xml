<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pc.academy_app_tis.head.fees">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_gravity="center"

                android:text="Subject :"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/subject_12"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Subject :"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"

                android:textColor="#000000"
                android:text="Class:"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/class_12"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Subject :"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"

                android:textColor="#000000"
                android:text="Number :"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:id="@+id/number_12"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Subject :"/>

        </LinearLayout>

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Student Name"
            android:textColorHint="#000000"
            android:id="@+id/student_name_12"
            android:padding="15dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous Fees"
            android:textColorHint="#000000"
            android:background="@color/colorPrimaryDark"
            android:textColor="#000000"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:id="@+id/previous_fees_12"
            />
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/recycler_12"
            >
        </android.support.v7.widget.RecyclerView>








    </LinearLayout>


</ScrollView>
